{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "eslint source/**/*.js",
    "postinstall": "patch-package",
    "patch-package": "patch-package",
		"test": "run-p lint:* build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"@parcel/transformer-webextension": "^2.0.1",
		"patch-package": "^6.4.7",
		"webext-options-sync": "^2.0.1",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
    "@endo/eslint-config": "^0.3.9",
    "@jessie.js/eslint-plugin": "^0.1.3",
		"@parcel/config-webextension": "^2.0.1",
		"@parcel/transformer-image": "^2.0.0-rc.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-jsx-a11y": "^6.4.0",
    "eslint-plugin-prettier": "^3.2.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.1",
    "prettier": "^1.18.2",
		"stylelint": "^13.13.1",
		"stylelint-config-xo": "^0.20.0",
		"xo": "^0.44.0"
	},
  "eslintConfig": {
    "extends": [
      "@endo"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
	"webExt": {
		"sourceDir": "distribution"
	}
}
